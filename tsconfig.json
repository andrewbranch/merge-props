    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": false,
    "sourceMap": true,
    "declaration": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/**.test.ts"
  ]
}